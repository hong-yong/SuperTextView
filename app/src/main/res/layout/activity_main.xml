<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.shape.library.SuperConstraintLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:radius="20dp"
        app:gradientMode="leftToRight"
        app:startColor="#FF0000"
        app:endColor="#0000FF"
        >
        <TextView
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="我是ConstraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </com.shape.library.SuperConstraintLayout>
    <com.shape.library.SuperLinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:radius="20dp"
        app:gradientMode="leftToRight"
        app:startColor="#FF0000"
        app:endColor="#0000FF"
        android:gravity="center"
        >
        <TextView

            android:textColor="#ffffff"
            android:text="我是LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </com.shape.library.SuperLinearLayout>
    <com.shape.library.SuperFrameLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:radius="20dp"
        app:gradientMode="leftToRight"
        app:startColor="#FF0000"
        app:endColor="#0000FF"

        >
        <TextView
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:text="我是FrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </com.shape.library.SuperFrameLayout>

    <com.shape.library.SuperEditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:radius="20dp"
        android:gravity="center"
        app:solidColor="#ffffff"
        app:strokeColor="@color/black"
        app:strokeWith="1dp"
        android:hint="我是EditText请输入文字"
        />
    <com.shape.library.SuperTextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:radius="20dp"
        android:gravity="center"
        app:solidColor="#ffffff"
        app:strokeColor="@color/black"
        app:strokeWith="1dp"
        android:hint="我是TextView"
        />
    <com.shape.library.SuperTextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:radius="20dp"
        android:gravity="center"
        app:startColor="#FF0000"
        app:endColor="#FFFF00"
        app:startTouchColor="#FFBB00"
        app:endTouchColor="#FFAAAA"

        android:hint="我是TextView"
        />
</LinearLayout>